@{
    ViewData["Title"] = "Product Review Panel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">
        <i class="bi bi-shop-window"></i> Product Review Panel
    </h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-4">
        <!-- Before Review -->
        <div class="col">
            <div class="card shadow-lg border-0 rounded-3 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-warning">
                        <i class="bi bi-clipboard-check display-5 mb-3"></i> <!-- Clipboard for pending reviews -->
                        <br>Product Review
                    </h5>
                    <p class="card-text">Add initial product details and review specifications.</p>
                    <a href="/ReviewPlane/Wizard" class="btn btn-outline-warning btn-lg rounded-pill"> Review </a>
                </div>
            </div>
        </div>

        <!-- After Review -->
        <div class="col">
            <div class="card shadow-lg border-0 rounded-3 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">
                        <i class="bi bi-stars display-5 mb-3"></i> <!-- Star icon for completed reviews -->
                        <br>Get Detail
                    </h5>
                    <p class="card-text">Finalize and publish reviews with star ratings and comments.</p>
                    <a href="/ReviewPlane/FilteredReviewAnswers" class="btn btn-outline-success btn-lg rounded-pill">View</a>
                </div>
            </div>
        </div>

        <!-- Review Insights -->
        <div class="col">
            <div class="card shadow-lg border-0 rounded-3 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-info">
                        <i class="bi bi-bar-chart-line display-5 mb-3"></i> <!-- Bar chart for analytics -->
                        <br>Review Insights
                    </h5>
                    <p class="card-text"> product Photo</p>
                    <a href="/ReviewPlane/GetPhotoDetails" class="btn btn-outline-info btn-lg rounded-pill">View Photo</a>
                </div>
            </div>
        </div>

       
        </div>
    </div>
</div>
