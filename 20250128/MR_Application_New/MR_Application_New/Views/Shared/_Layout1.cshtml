<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient-primary fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">MyApp</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ProductQuestions">Product Questions</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content area -->
    <div class="main-content" style="margin-top: 80px;">
        @RenderBody()
    </div>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        /* General reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

      /*   body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #f4f4f4 0%, #e0e0e0 100%); /* Light gray to darker gray gradient */
       /*      color: #333; /* Darker text color for contrast */
     


        body {
            font-family: Arial, sans-serif;
            background-color:aliceblue; /* Lighter mixed gray background */
            color: #333; /* Darker text color for contrast */
            min-height: 100vh;
        }

        .container {
            width: 80%;
            margin: 0 auto;
        }

        /* Main content */
        .main-content {
            padding: 20px;
            background-color: #f5f5f5; /* Light gray background */
            border-radius: 10px;
            margin-bottom: 20px;
        }

        /* Navbar color change */
        .navbar {
            background: linear-gradient(45deg, #6a11cb, #2575fc); /* Gradient background */
        }

        .navbar .navbar-nav .nav-link {
            color: white !important; /* White text for navbar items */
            text-transform: uppercase;
            font-weight: bold;
        }

        .navbar .navbar-nav .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.3); /* Light hover effect */
            border-radius: 5px;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .navbar .container {
                flex-direction: column;
                align-items: flex-start;
            }

            .navbar .nav-links {
                display: block;
                margin-top: 10px;
            }

            .navbar .nav-links li {
                margin: 10px 0;
            }

            .main-content {
                margin-top: 100px;  /* Adjusting the margin for smaller screens */
                padding: 15px;
            }
        }

        @@media (max-width: 480px) {
            .navbar .logo {
                font-size: 20px;
            }

            .navbar .nav-links li a {
                padding: 8px 15px;
            }
        }
    </style>
</body>
</html>
