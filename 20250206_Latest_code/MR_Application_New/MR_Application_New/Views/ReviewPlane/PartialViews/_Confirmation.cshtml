@{
    ViewData["Title"] = "Review Submitted";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5 p-4 text-center">
    <!-- Success Message -->
    <div class="alert alert-success mb-4" role="alert" style="border-radius: 8px; background-color: #d4edda; border-color: #c3e6cb;">
        <i class="bi bi-check-circle-fill" style="font-size: 3rem; color: #28a745;"></i>
        <h3 class="mt-3" style="color: #28a745; font-weight: bold; font-size: 2rem;">Your review was submitted successfully!</h3>
        <p class="lead" style="font-size: 1.2rem; color: #155724;">Thank you for taking the time to share your feedback. We appreciate your input!</p>
    </div>

    <!-- Return Button -->
    <div class="mt-4">
        <a href="@Url.Action("Welcome", "Login")" class="btn btn-primary btn-lg" style="font-size: 1.1rem;">
            <i class="bi bi-house-door-fill"></i> Return to Home
        </a>
    </div>
</div>
