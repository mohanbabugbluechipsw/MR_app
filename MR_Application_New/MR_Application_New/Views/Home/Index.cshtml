@{
    ViewData["Title"] = "Merchandiser App";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    /* General body styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f2f5;
        color: #333;
        margin: 0;
        padding: 0;
    }



    .navbar-nav .nav-link:hover {
        color: #ffffff;
        background-color: rgba(0, 0, 0, 0.2);
    }

    /* Main slider styling */
    #main-slider {
        position: relative;
        width: 100%;
        max-width: 100%;
        height: 65vh;
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        margin-bottom: 20px;
    }

    .slider-container {
        display: flex;
        transition: transform 0.6s ease-in-out;
    }

    .items {
        min-width: 100%;
        height: 100%;
        position: relative;
    }

    .items img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
        transition: transform 0.4s ease;
    }

    .items img:hover {
        transform: scale(1.02);
    }

    .items::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6));
        border-radius: 10px;
        z-index: 1;
    }

    /* Arrow styling */
    .arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(255, 255, 255, 0.7);
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        cursor: pointer;
        z-index: 2;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 20px;
        color: #333;
        transition: background-color 0.3s;
    }

    .arrow:hover {
        background-color: rgba(255, 255, 255, 0.9);
    }

    .left-arrow {
        left: 20px;
    }

    .right-arrow {
        right: 20px;
    }

    /* Responsive styling */
     @@media (max-width: 1200px) {
        #main-slider {
            height: 60vh;
        }
    }

    @@media (max-width: 992px) {
        #main-slider {
            height: 55vh;
        }

        .arrow {
            width: 35px;
            height: 35px;
            font-size: 18px;
        }

        .navbar-nav .nav-link {
            font-size: 1rem;
        }
    }

    @@media (max-width: 768px) {
        #main-slider {
            height: 50vh;
        }

        .arrow {
            width: 35px;
            height: 35px;
            font-size: 18px;
        }

        .navbar-nav .nav-link {
            font-size: 1rem;
            padding: 10px;
        }

        .navbar-brand img {
            height: 30px;
        }
    }

     @@media (max-width: 576px) {
        #main-slider {
            height: 40vh;
        }

        .arrow {
            width: 30px;
            height: 30px;
            font-size: 16px;
        }

        .navbar-nav .nav-link {
            font-size: 0.9rem;
            padding: 8px;
        }

        .navbar-brand img {
            height: 25px;
        }
    }
</style> 

<!-- HTML structure -->
<div id="home-top-section">
    <div id="main-slider">
        <div class="slider-container">
            <div class="items">
                <a href="#">
                    <img src="~/img/maxresdefault.jpg" alt="Image 1" />
                </a>
            </div>
            <div class="items">
                <a href="#">
                    <img src="~/img/download.jpg" alt="Image 2" />
                </a>
            </div>
            <div class="items">
                <a href="#">
                    <img src="~/img/unilever.jpg" alt="Image 3" />
                </a>
            </div>
        </div>
        <button class="arrow left-arrow" onclick="showPreviousSlide()">
            <i class="bi bi-chevron-left"></i>
        </button>
        <button class="arrow right-arrow" onclick="showNextSlide()">
            <i class="bi bi-chevron-right"></i>
        </button>
    </div>
</div>



<!-- JavaScript for slider functionality -->
<script>
    let currentIndex = 0;
    const items = document.querySelectorAll('#main-slider .items');
    const totalItems = items.length;
    const sliderContainer = document.querySelector('.slider-container');
    let slideInterval;

    function updateSlidePosition() {
        const translateX = -currentIndex * 100;
        sliderContainer.style.transform = `translateX(${translateX}%)`;
    }

    function startSlideShow() {
        slideInterval = setInterval(() => {
            showNextSlide();
        }, 3000);
    }

    function showNextSlide() {
        currentIndex = (currentIndex + 1) % totalItems;
        updateSlidePosition();
    }

    function showPreviousSlide() {
        currentIndex = (currentIndex - 1 + totalItems) % totalItems;
        updateSlidePosition();
        pauseSlideShow();
    }

    function pauseSlideShow() {
        clearInterval(slideInterval);
        setTimeout(startSlideShow, 2000);
    }

    // Start the slideshow initially
    startSlideShow();

    document.addEventListener("DOMContentLoaded", function () {
        let isPausedOnMobile = false;

        function checkScreenSize() {
            if (window.innerWidth <= 768 && !isPausedOnMobile) {
                pauseSlideShow();
                isPausedOnMobile = true;
            } else if (window.innerWidth > 768 && isPausedOnMobile) {
                startSlideShow();
                isPausedOnMobile = false;
            }
        }

        window.addEventListener('resize', checkScreenSize);
        checkScreenSize();
    });

    document.querySelector('.left-arrow').addEventListener('click', showPreviousSlide);
    document.querySelector('.right-arrow').addEventListener('click', showNextSlide);

</script>
