<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <link rel="stylesheet" href="~/lib/leaflet-routing-machine/leaflet-routing-machine.css" />
    <link rel="stylesheet" href="~/lib/icons-Main/font/bootstrap-icons.css">
@*     <link rel="stylesheet" href="~/lib/datatables/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/lib/datatables/jquery.dataTables.min.css"> *@

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.3.1/css/buttons.bootstrap5.min.css" rel="stylesheet" />


    <style>
        body {
            padding-top: 76px; /* Space for the fixed navbar */
            background-color: #f0f4f8; /* Light gray background */
            color: #343a40; /* Dark text color */
            font-family: 'Arial', sans-serif; /* Use a modern font */
            line-height: 1.6; /* Improve readability */
            margin: 0; /* Remove default margin */
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .nav-item a {
            margin-right: 15px;
            font-size: 1.1rem;
            color: #343a40; /* Dark text color */
            transition: color 0.3s; /* Smooth transition for hover */
        }

        .nav-item a:hover {
            color: #007bff; /* Bootstrap primary color on hover */
            text-decoration: underline; /* Underline on hover */
        }

        .navbar-toggler {
            border-color: rgba(0, 0, 0, 0.1);
        }

        .navbar-light .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,..."); /* Custom icon */
        }

        .main-content {
            padding: 20px;
            margin-top: 20px; /* Add space below the navbar */
        }

        /* Footer styles */
        .footer {
            background-color: #f8f9fa; /* Light background for footer */
            padding: 20px 0; /* Vertical padding for footer */
            margin-top: 20px; /* Space above footer */
            text-align: center; /* Center text in footer */
        }

        /* Mobile view adjustments */
        @@media (max-width: 576px) {
            .navbar-brand {
                font-size: 1.2rem;
            }

            .nav-item a {
                font-size: 1rem;
            }

            body {
                padding-top: 56px; /* Reduce padding on smaller screens */
            }

            .main-content {
                padding: 15px;
            }

            .navbar-toggler-icon {
                width: 35px;
                height: 3px;
                background-color: #343a40;
                display: block;
                margin: 5px 0;
                transition: background-color 0.3s ease;
            }
        }

        /* Tablet and larger screens */
        @@media (min-width: 768px) {
            .container-fluid {
                max-width: 1140px; /* Keep content centered on larger screens */
            }

            .navbar-expand-lg .navbar-nav {
                flex-direction: row; /* Keep items in a row */
            }

            .nav-item a {
                padding: 8px 16px;
            }
        }

        /* Custom navbar toggler */
        .custom-toggler {
            border: none;
            background-color: transparent;
            padding: 10px;
        }

        .custom-toggler-icon {
            width: 30px;
            height: 3px;
            background-color: #343a40;
            display: block;
            margin: 5px 0;
        }

        /* Hover effect for the toggler */
        .navbar-toggler[aria-expanded="true"] .custom-toggler-icon {
            background-color: #007bff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">MRApplication</a>

                <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="custom-toggler-icon"></span>
                    <span class="custom-toggler-icon"></span>
                    <span class="custom-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- User session details -->
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Hello, @Context.Session.GetString("UserName")</span>
                            </li>
                        }
                        @if (Context.Session.GetString("UserRole") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Role: @Context.Session.GetString("UserRole")</span>
                            </li>
                        }

                        <!-- Conditional Navigation -->
                        @if (ViewBag.IsAdmin != null) 
                        {
                            @await Html.PartialAsync("_NavAdmin")
                        }
                        else if (ViewBag.IsUsers != null)
                        {
                            @await Html.PartialAsync("_NavMain")
                        }

                        <!-- Go back button -->
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:window.history.back()">
                                <i class="bi bi-arrow-left-circle"></i> Go back
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3 main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/leaflet/leaflet.js"></script>
    <script src="~/lib/leaflet-routing-machine/leaflet-routing-machine.js"></script>
@* 
    <script src="~/lib/datatables/dataTables.bootstrap5.min.js"></script>

    <script src="/lib/datatables/jquery.dataTables.min.js"></script>
 *@

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.1/js/buttons.html5.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
